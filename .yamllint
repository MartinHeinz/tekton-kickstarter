rules:
  braces: enable
  brackets:
    min-spaces-inside: 0
    max-spaces-inside: 1
  colons: enable
  commas: enable
  comments:
    level: warning
  comments-indentation:
    level: warning
  document-end: disable
  document-start: disable
  empty-lines: enable
  empty-values: enable
  hyphens: enable
  key-duplicates: enable
  key-ordering: disable
  line-length:
    max: 180
    allow-non-breakable-words: true
    allow-non-breakable-inline-mappings: true
  new-line-at-end-of-file: enable
  new-lines: enable
  octal-values: enable
  quoted-strings:
    quote-type: single
    required: false
    extra-required: [ '^http://', '^ftp://', ':', '^\d+$' ]
  trailing-spaces: enable
  truthy:
    level: warning
  indentation:
    spaces: 2
    indent-sequences: whatever
